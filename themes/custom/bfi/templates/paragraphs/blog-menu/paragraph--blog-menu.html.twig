{{ attach_library('bfi/blog-menu-styling') }}

{% set blogMenuType = content.field_display_type['#items'].getString() %}

{% if blogMenuType == "full" %}
<section class="container" id="blogs-preview">
	<div class="row">
		{{ drupal_view('blogs', 'block_3') }}
	</div>
</section>

{% else %}

<section class="title-simple-styling container text-center">
		<div class="row">
		<div class="col-md-12">
			<div class="header aos-init aos-animate" data-aos="fade-right">Recent News and Information</div>
			<div class="divider aos-init aos-animate" data-aos="fade-left"></div>
		</div>
	</div>
	</section>

<div class="container" id="blogs-preview">
	<div class="row">
		{{ drupal_view('blogs', 'block_2') }}
	</div>
</div>
{% endif %}