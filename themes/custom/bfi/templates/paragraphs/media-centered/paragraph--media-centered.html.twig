{{ attach_library('bfi/media-centered-styling') }}


<section class="container media-centered">
	{% if content.field_header.0 != "" %}
	<div class="row">
		<div class="col-md-8 col-md-push-2 header text-center">
			{{ content.field_header.0 }}
		</div>
	</div>
	{% endif %}
	{% if content.field_description.0 != "" %}
	<div class="row">
		<div class="col-md-8 col-md-push-2 description">
			{{ content.field_description.0 }}
		</div>
	</div>
	{% endif %}
	{% if content.field_image.0 != "" %}
	<div class="row">
		<div class="col-md-8 col-md-push-2 image">
			{{ content.field_image.0 }}
		</div>
	</div>
	{% endif %}

	{% if content.field_video_id.0 != "" %}
	<div class="row video-container" data-aos="flip-up">
		<div class="col-md-8 col-md-push-2">
			<div class="video-responsive">
				<iframe width="420" height="315" src="https://www.youtube.com/embed/{{ content.field_video_id.0 }}" frameborder="0" allowfullscreen></iframe>
			</div>
		</div>
	</div>
	{% endif %}
</section>