{{ attach_library('bfi/title-simple-styling') }}

{% set titleAlignment = content.field_alignment['#items'].getString() %}

<section class="title-simple-styling container{% if titleAlignment !="" %} text-{{ titleAlignment }}{% endif %}">
	{% if content.field_header.0 != "" %}
	<div class="row">
		<div class="col-md-12">
			<div class="header" data-aos="fade-right"{% if content.field_inline_css.0 != "" %} style="{{ content.field_inline_css.0 }}"{% endif %}>{{ content.field_header.0 }}</div>
			<div class="divider" data-aos="fade-left"></div>
		</div>
	</div>
	{% endif %}
</section>