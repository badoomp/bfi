{{ attach_library('bfi/columns-two-with-image-styling') }}

{% set imageLocation = content.field_image_position['#items'].getString() %}

<section class="container columns-two-with-image">
	<div class="row flex">
		<div class="col-sm-6 col-md-5 col-lg-5{% if imageLocation =="right" %} col-sm-push-6 col-md-push-7 col-lg-push-7{% endif %}">
	        <div class="image"{% if imageLocation =="right" %} data-aos="fade-left"{% else %}  data-aos="fade-right"{% endif %}>
	          {% if content.field_image.0 !="" %}
	            {{ content.field_image.0 }}
	          {% endif %}
	        </div>
        </div>
        <div class="col-sm-6 col-md-7 col-lg-7 {% if imageLocation =="right" %} col-sm-pull-6 col-md-pull-5 col-lg-pull-5{% endif %}">
	        <div class="text-container{% if imageLocation =="right" %} flipped{% endif %}">
	          {% if content.field_header.0 != "" %}
				<div class="header">
					{{ content.field_header.0 }}
				</div>
			{% endif %}
			{% if content.field_description.0 != "" %}
				<div class="description">
					{{ content.field_description.0 }}
				</div>
			{% endif %}
	        </div>
        </div>
	</div>
</section>
